pipeline {
    agent any

    environment {
        COMPOSE_FILE = 'docker-compose.yml'
        PROJECT_NAME = 'chatapp'
        BACKEND_DIR = 'backend'
    }

    stages {

        stage('Checkout') {
            steps {
                echo "üì• L·∫•y source code t·ª´ GitHub..."
                git branch: 'main',
                    url: 'https://github.com/duykhanhdeveloper93/chatApp3'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir("${BACKEND_DIR}") {
                    sh '''
                        echo "üì¶ C√†i ƒë·∫∑t dependencies cho backend..."
                        npm install
                    '''
                }
            }
        }

        stage('Start Temporary MySQL for Migration') {
            steps {
                sh '''
                    echo "üê≥ Kh·ªüi ƒë·ªông t·∫°m MySQL container..."
                    docker-compose -p $PROJECT_NAME -f $COMPOSE_FILE up -d mysql

                    echo "‚è≥ ƒê·ª£i MySQL kh·ªüi ƒë·ªông..."
                    sleep 15
                '''
            }
        }

        stage('Generate Migration') {
            steps {
                dir("${BACKEND_DIR}") {
                    sh '''
                        echo "üß† Sinh migration m·ªõi..."

                        # ‚úÖ Load to√†n b·ªô bi·∫øn m√¥i tr∆∞·ªùng trong .env
                        if [ -f .env ]; then
                            echo "üìÑ N·∫°p bi·∫øn m√¥i tr∆∞·ªùng t·ª´ .env"
                            export $(grep -v '^#' .env | xargs)
                        else
                            echo "‚ö†Ô∏è Kh√¥ng t√¨m th·∫•y file .env trong backend/"
                            exit 1
                        fi

                        MIGRATION_NAME="AutoGenerated$(date +%s)"

                        npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate \
                            -d src/data-source.ts src/migrations/$MIGRATION_NAME \
                            || echo "‚ö†Ô∏è Kh√¥ng c√≥ thay ƒë·ªïi n√†o ƒë·ªÉ generate"
                    '''
                }
            }
        }

        stage('Build & Deploy Containers') {
            steps {
                sh '''
                    echo "üöÄ Build & kh·ªüi ƒë·ªông l·∫°i to√†n b·ªô project..."
                    docker-compose -p $PROJECT_NAME -f $COMPOSE_FILE up -d --build

                    echo "‚è≥ ƒê·ª£i backend s·∫µn s√†ng ƒë·ªÉ ch·∫°y migration..."
                    sleep 15

                    echo "‚öôÔ∏è Ch·∫°y migration trong container backend..."
                    docker exec chat-backend npx typeorm migration:run -d dist/data-source.js \
                        || echo "‚ö†Ô∏è Kh√¥ng c√≥ migration n√†o ƒë·ªÉ ch·∫°y"
                '''
            }
        }
    }

    post {
        success {
            echo '‚úÖ Tri·ªÉn khai th√†nh c√¥ng!'
            sh '''
                docker image prune -f
                docker builder prune -f
            '''
        }
        failure {
            echo '‚ùå Tri·ªÉn khai th·∫•t b·∫°i! Ki·ªÉm tra log ƒë·ªÉ bi·∫øt chi ti·∫øt.'
            sh '''
                echo "üßπ D·ª´ng c√°c container t·∫°m..."
                docker-compose -p $PROJECT_NAME -f $COMPOSE_FILE down || true
            '''
        }
        always {
            echo "üèÅ Pipeline ho√†n t·∫•t."
        }
    }
}
